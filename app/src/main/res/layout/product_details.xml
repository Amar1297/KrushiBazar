<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5F5E3"
    android:orientation="vertical"
    tools:context=".ProductDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="240dp"
                android:layout_height="233dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_above="@+id/Desc"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/Desc"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:layout_above="@+id/price"
                android:layout_marginBottom="13dp"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_above="@+id/status"
                android:layout_marginBottom="32dp"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_above="@+id/quntity"
                android:layout_marginBottom="12dp"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/quntity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_above="@+id/contact"
                android:layout_marginBottom="14dp"
                android:textColor="@android:color/black"
                android:textSize="25dp" />



            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="39dp"
                android:textColor="@android:color/black"
                android:textSize="25dp" />


            <Button
                android:id="@+id/wap_btn"
                android:layout_width="245dp"
                android:layout_height="110dp"
                android:layout_below="@+id/contact"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/wap_btn"
                android:linksClickable="true"
                android:onClick="goToSo"
                android:textStyle="bold" />

            <Button
                android:id="@+id/call_btn"
                android:layout_width="133dp"
                android:layout_height="87dp"
                android:layout_below="@+id/contact"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:background="@drawable/call_btn"
                android:linksClickable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:text="Rating  :-  "
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <RatingBar
                android:id="@+id/Rating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-3dp"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>